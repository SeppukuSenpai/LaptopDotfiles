alias uninstall='pikaur -Rsn'
alias installed='pacman -Q'
alias search='pikaur -Ss'
alias update='pikaur -Syu'
alias aurinstalled='pacman -Qm'
alias pkginfo='pacman -Qi'

# Python Commands
alias pylist='pip freeze'
alias pyupdate='~/.config/scripts/polyScripts/update-pip.sh'

